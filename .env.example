# ============================================================================
# Docker Deployment Configuration
# Copy this file to .env and update with your actual values
# ============================================================================

# Domain Configuration
# Your production domain (with https://)
DOMAIN_URL=https://thisisjia.com

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Include your production domain and localhost for development
ALLOWED_ORIGINS=https://thisisjia.com,http://localhost:3000

# Groq API Configuration
# Get your free API key from: https://console.groq.com/keys
# Free tier: 30 req/min, 6000 tokens/min for llama-3.3-70b-versatile
GROQ_API_KEY=your_groq_api_key_here

# ============================================================================
# Backend Configuration
# ============================================================================

# Python Environment
PYTHONPATH=/app/src
PYTHONUNBUFFERED=1

# Database Configuration
DATABASE_URL=sqlite:///./data/resume.db
DATABASE_PATH=/app/data/resume.db

# Application Configuration
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Token Configuration
TOKEN_SECRET_KEY=your_secret_key_here
TOKEN_EXPIRY_DAYS=30

# Admin Security
# Set a strong, unique token for admin dashboard access
# This token is required to access /admin/analytics endpoint
ADMIN_TOKEN=your_secure_admin_token_here

# LLM Configuration
USE_LOCAL_LLM=false
LLM_MODEL=llama-3.3-70b-versatile

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# ============================================================================
# Frontend Configuration
# ============================================================================

# Next.js API URL (should match DOMAIN_URL)
NEXT_PUBLIC_API_URL=https://thisisjia.com
NODE_ENV=production
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENVIRONMENT=production

# ============================================================================
# Optional API Keys
# ============================================================================

# Tavily API Configuration (optional - for web search features)
# TAVILY_API_KEY=your_tavily_api_key_here

# Note: This deployment uses Groq API (configured above)
# Alternative models available on Groq:
# - llama-3.3-70b-versatile (recommended - newest, best quality)
# - llama-3.1-8b-instant (fastest, highest free tier limits)
# - mixtral-8x7b-32768 (good balance of speed and quality)